<div class="container">
<div class="header-row" id="header-row" style="padding: 0px; overflow:hidden; height:100px;">
   <div class="container-fluid" style="padding: 0px;">
      <div class="row">
         <div class="col-xs-12">
            <a class="navbar-brand logo" href="index.html">
               <img src="http://placekitten.com/g/1200/600" alt="company logo" style="width: 100%;">
            </a>
         </div>
      </div>
   </div>
</div>

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
</div>
      <h1>All cocktails</h1>
      <div class="card-columns">
        <% @cocktails.each do |cocktail| %>
        <div class="card" style="width: 18rem;">
          <img src="https://source.unsplash.com/230x160/?cocktails" class="card-img-top" alt="...">
            <div class="card-body">
              <%= link_to cocktail.name, cocktail_path(cocktail), class: 'btn btn-primary' %>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>

        <% end %>
      </div>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
